<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h3 class="text-center mt-1 mb-4">投稿編集</h3>
    <%= form_with model: @post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :タイトル %><br />
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :住所 %><br />
        <%= form.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :本文 %><br />
        <%= form.text_area :content, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :画像 %><br />
        <%= form.file_field :post_image, class: "form-control" %>
      </div>

      <div class="actions text-center">
        <%= form.submit "更新", class: "btn btn-primary w-100 mt-3"%>
        <%= link_to "戻る", post_path, method: :get, class: "btn btn-secondary btn-sm w-50 mt-3"%>
      </div>
    <% end %>
  </div>
</div>
