<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h3 class="text-center mt-1 mb-4">新規投稿</h3>
    <%= form_with model: @post, local: true do |form| %>
      <%= render 'shared/error_messages', model: form.object %>
      <div class="form-group">
        <%= form.label :タイトル %><br />
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :住所 %><br />
        <%= form.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :本文 %><br />
        <%= form.text_area :content, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :画像 %><br />
        <%= form.file_field :post_image, class: "form-control" %>
      </div>

      <div class="actions text-center">
        <%= form.submit "送信", class: "btn btn-primary w-100 mt-3"%>
      </div>
    <% end %>
  </div>
</div>
