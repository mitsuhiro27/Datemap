<div class="mt-5">
  <%= render "index_map"%>
</div>
<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h3 class="text-center mt-1">検索結果"<%= @posts.count %>件"</h3>
    <% @posts.each do |post| %>
      <div class="border-top border-bottom">
        <div class="ms-5 mt-3">
          <%= image_tag post.user.user_image_url, class: "index_user_image"%>
          <strong><%= post.user.name %></strong>
          <%= l post.created_at, format: :short %><br>
          <h4 class="card-title mt-3"><%= link_to post.title, "#{post.id}", class: "post" %></h5>
          <p class="card-text"><%= post.content%></p>
          <% if post.post_image? %>
            <%= image_tag post.post_image_url, class: "post_image" %>
          <% end %>
          <div class="mt-3 mb-2">
            <% if user_signed_in? %>
              <%= render "favorites/btn", post: post %>
            <% else %>
              <i class="bi bi-heart"></i><%= post.favorites.count %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
