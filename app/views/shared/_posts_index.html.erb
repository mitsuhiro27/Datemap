<div class="border-top border-bottom">
  <div class="ms-5 mt-3">
    <%= image_tag post.user.user_image_url, class: "index_user_image"%>
    <strong><%= link_to post.user.name, user_path(post.user.id), class: "post_user" %></strong>
    <%= l post.created_at, format: :short %><br>
    <h4 class="card-title mt-3"><%= link_to post.title, "posts/#{post.id}", class: "post" %></h5>
    <p class="card-text"><%= post.content%></p>
    <% if post.post_image? %>
      <%= image_tag post.post_image_url, class: "post_image" %>
    <% end %>
    <div class="mt-3 mb-2">
      <% if user_signed_in? %>
        <%= render "favorites/btn", post: post %>
      <% else %>
        <i class="bi bi-heart"></i><%= post.favorites.count %>
      <% end %>
    </div>
  </div>
</div>
