<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h2 class= "text-center mt-1 mb-3">ユーザー登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/error_messages", model: f.object %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

       <div class="form-group">
        <%= f.label :プロフィール画像 %><br/>
        <%= f.file_field :user_image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :プロフィール %><br />
        <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form-control", value: "よろしくお願いします" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
      </div>
       
      <div class="mt-2">
        <div class="text-center actions">
          <%= f.submit "登録する", :class => "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    <div class="text-center mt-2">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>  
